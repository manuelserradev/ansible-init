{
  "$schema": "https://schema.linearmouse.app/0.10.2",
  "schemes": [
    {
      "if": {
        "device": {
          "category": "mouse"
        }
      },
      "pointer": {
        "acceleration": 0.8,
        "disableAcceleration": true,
        "speed": 0
      },
      "scrolling": {
        "acceleration": 1,
        "distance": 3,
        "speed": 0
      }
    }
  ]
}
